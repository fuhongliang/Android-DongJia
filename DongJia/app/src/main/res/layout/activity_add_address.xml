<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_color"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <View style="@style/line_fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">
        <!--联系人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_name"
                android:text="联系人" />

            <EditText
                style="@style/editText_name"
                android:hint="请输入收货人姓名" />
        </LinearLayout>

        <View style="@style/line_f0" />
        <!--手机号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_name"
                android:text="手机号" />

            <EditText
                style="@style/editText_name"
                android:hint="请输入手机号码" />
        </LinearLayout>

        <View style="@style/line_f0" />

        <!--收货地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_name"
                android:text="收货地址" />

            <EditText
                style="@style/editText_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="36dp"
                android:hint="点击选择地址" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="15dp"
                android:background="@drawable/center_ic_xuanze" />
        </LinearLayout>

        <View style="@style/line_f0" />

        <!--门牌号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_name"
                android:text="门牌号" />

            <EditText
                style="@style/editText_name"
                android:hint="详细地址,例: 1号楼1314室" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <TextView
            style="@style/text_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="设置默认地址" />

        <Switch
            android:id="@+id/swh_auto_print"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:checked="true"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/thumb"
            android:track="@drawable/track_selctor" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_green_22"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>