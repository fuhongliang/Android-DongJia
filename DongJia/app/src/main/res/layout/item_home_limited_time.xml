<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_buy"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_pic"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:background="#F8F3E6"
        android:gravity="center"
        android:text="距结束22:44:16"
        android:textColor="@color/home_16"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLength="6"
        android:textColor="@color/typed_text_color"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp">

        <TextView
            android:id="@+id/after_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="券后￥"
            android:textColor="@color/home_16"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_miao_sha_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/after_voucher"
            android:text="97889.78"
            android:textColor="@color/home_16"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="￥3222"
            android:textColor="@color/hint_text_color"
            android:textSize="9sp" />
    </RelativeLayout>
</LinearLayout>