<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_recommend"
    android:background="@color/category_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <com.sunfusheng.GlideImageView
            android:id="@+id/iv_cover_pic"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:background="@drawable/bg_white_3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="6"
                android:text="北欧简约设计自如布..."
                android:textColor="@color/typed_text_color"
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥47322"
                    android:textColor="@color/home_16"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_price"
                    android:text="￥2322"
                    android:textColor="@color/hint_text_color"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_show_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5868人已买"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/hint_text_color"
                    android:textSize="10sp" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>