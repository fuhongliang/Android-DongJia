<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <com.yalantis.ucrop.view.GestureCropImageView
            android:id="@+id/iv_avatar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="凯鹰厨卫"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/tv_store_name"
            android:background="@drawable/center_ic_xuanze" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="待付款"
            android:textColor="@color/home_16"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        style="@style/line_fff"
        android:layout_marginLeft="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.yalantis.ucrop.view.GestureCropImageView
            android:id="@+id/iv_good_pic"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginRight="15dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_good_pic"
            android:text="暖眠北欧三人沙发橡木家具"
            android:textColor="@color/typed_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_good_name"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_good_pic"
            android:text="白橡木 1800mm*2000mm"
            android:textColor="@color/hint_text_color"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_specification"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/iv_good_pic">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥5999"
                android:textColor="@color/home_16"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="x1"
                android:textColor="@color/hint_text_color"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        style="@style/line_fff"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_e6_white"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_e6_white"
            android:gravity="center"
            android:text="联系卖家"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_e6_white"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_green_white"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/green"
            android:textSize="13sp" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bg_green_white"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/green"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>