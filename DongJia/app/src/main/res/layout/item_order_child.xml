<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <com.sunfusheng.GlideImageView
                android:id="@+id/iv_store_pic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/iv_store_pic"
                android:text="凯鹰厨卫"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_store_name"
                android:background="@drawable/center_ic_xuanze" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="待付款"
                android:textColor="@color/home_16"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            style="@style/line_fff"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            style="@style/line_fff"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_e6_white"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_e6_white"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_green_white"
                android:gravity="center"
                android:text="立即支付"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="84dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_green_white"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>