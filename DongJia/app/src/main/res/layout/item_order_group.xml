<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_goods"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:padding="15dp">


    <com.sunfusheng.GlideImageView
        android:id="@+id/iv_good_pic"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_good_pic"
        android:textColor="@color/typed_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_good_name"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/iv_good_pic"
        android:textColor="@color/hint_text_color"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_specification"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/iv_good_pic">

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_16"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/hint_text_color"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>
